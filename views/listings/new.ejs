<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
  <div class="col-8 offset-2">
    <h2 class="mb-4">Create New Listing</h2>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a Catchy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Title should not be empty!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="listing[description]"
          placeholder="Tell us more about your property..."
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Write a short description...</div>
      </div>

      <div class="mb-3">
        <label for="image"
          >Upload Image (Only <b>PNG</b>, <b>JPG</b>, <b>JPEG</b> are
          supported)</label
        >
        <input
          class="form-control"
          type="file"
          name="listing[image]"
          id="image"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="For how much?"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should not be empty!</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country should not be empty!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Where is it situated?"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should not be empty!</div>
      </div>
      <!-- <br /><br /> -->
      <button class="btn btn-dark mb-5 add-btn">Add Listing</button>
    </form>
  </div>
</div>
