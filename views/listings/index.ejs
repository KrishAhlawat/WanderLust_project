<% layout("/layouts/boilerplate") %>

<div class="filters">
  <div class="filter-container">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <div><b>Trending</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <div><b>Rooms</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <div><b>Farms</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <div><b>Pools</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-warehouse"></i></div>
      <div><b>Warehouse</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <div><b>Beach</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <div><b>Castle</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-water"></i></div>
      <div><b>Lake</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mug-hot"></i></div>
      <div><b>Breakfast</b></div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tower-observation"></i></div>
      <div><b>Towers</b></div>
    </div>
  </div>

  <div class="taxToggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after Taxes</label
      >
    </div>
  </div>
</div>

<!-- <h2 class="my-3">All Listings</h2> -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
        loading="lazy"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <div>
            <b><%= listing.title %></b>
          </div>
          <div>
            <%= listing.location %> 
          </div>
          <div class="price">
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
            "N/A" %> / night without taxes
          </div>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script src="/public/js/script.js"></script>
